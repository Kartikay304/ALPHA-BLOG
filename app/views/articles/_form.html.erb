<div class="container">
<div class="form-group row col-10">
    <%= render 'shared/errors' %></div>
    <div class="form-group row text-center col-10">
        <%= form_with model: @article, class: "shadow p-3 mb-2 bg-info rounded", local: true do |f| %>
            <div class="form-group row">
                <%= f.label :title, class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                    <%= f.text_field :title, class: "form-control shadow rounded", placeholder:"Title of article" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :description, class: "col-2 col-form-label text-light" %><br/>
                <div class="col-10">
                    <%= f.text_area :description,rows: 10, class: "form-control shadow rounded", placeholder:"Discription of article" %>
                </div>
            </div>
            <br>
            <div class="text-center">
                <%= f.submit class: "btn btn-outline-light btn-lg" %>
            </div>
        <% end %>
        <div class="mb-3">
        <%= link_to '[ Cancel and Return to articles listing ]', articles_path, class: "text-info" %>
        </div>
    </div>
</div>
